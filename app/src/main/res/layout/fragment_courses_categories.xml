<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <!-- Thanh tiêu đề chứa Back và Menu -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/orange">

        <!-- Nút Back -->
        <Button
            android:id="@+id/btn_back"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/back"
            android:text="Course categories"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:gravity="center_vertical"/>

        <!-- Nút Menu (nằm bên phải) -->
<!--        <Button-->
<!--            android:id="@+id/btn_menu"-->
<!--            style="@android:style/Widget.DeviceDefault.Button.Borderless"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:drawableLeft="@drawable/menu"-->
<!--            android:text=""-->
<!--            android:paddingEnd="15dp"-->
<!--            android:gravity="center"/>-->
    </RelativeLayout>

    <!-- Text tiêu đề -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:text="Course categories"
        android:layout_marginStart="10dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <!-- Các button khác giữ nguyên -->
    <Button
        android:id="@+id/bachelor"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textView1"
        android:drawableLeft="@drawable/cate_folder"
        android:drawableRight="@drawable/arrow_right"
        android:text="Bachelor"
        android:textColor="#555252"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textAlignment="textStart"
        app:iconPadding="15dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"/>

    <Button
        android:id="@+id/mobile_button2"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/bachelor"
        android:drawableLeft="@drawable/cate_folder"
        android:drawableRight="@drawable/arrow_right"
        android:text="Master"
        android:textColor="#555252"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textAlignment="textStart"
        app:iconPadding="15dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"/>


    <Button
        android:id="@+id/mobile_button3"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/mobile_button2"
        android:drawableLeft="@drawable/cate_folder"
        android:drawableRight="@drawable/arrow_right"
        android:text="PhD-ACADEMIC RESOURCES"
        android:textColor="#555252"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textAlignment="textStart"
        app:iconPadding="15dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"/>

    <Button
        android:id="@+id/mobile_button4"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mobile_button3"
        android:drawableLeft="@drawable/cate_folder"
        android:drawableRight="@drawable/arrow_right"
        android:text="Supporting department"
        android:textColor="#555252"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textAlignment="textStart"
        app:iconPadding="15dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"/>

    <Button
        android:id="@+id/mobile_button5"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mobile_button4"
        android:drawableLeft="@drawable/cate_folder"
        android:drawableRight="@drawable/arrow_right"
        android:text="PLMCC"
        android:textColor="#555252"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textAlignment="textStart"
        app:iconPadding="15dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"/>

    <Button
        android:id="@+id/ict"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mobile_button5"
        android:drawableLeft="@drawable/cate_folder"
        android:drawableRight="@drawable/arrow_right"
        android:text="Admission"
        android:textColor="#555252"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textAlignment="textStart"
        app:iconPadding="15dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"/>
</RelativeLayout>


