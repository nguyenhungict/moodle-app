<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <Button
            style="@style/OrangeButton"
            android:id="@+id/back_third_year"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/orange"
            android:drawableLeft="@drawable/back"
            android:paddingEnd="15dp"
            android:text="Third Year"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Breadcrumb -->
        <TextView
            android:id="@+id/textView_third_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/back_third_year"
            android:text="Course categories / Bachelor / ICT / Third Year"
            android:layout_marginStart="10dp"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <!-- Course buttons -->
        <Button
            android:id="@+id/course_mobile"
            style="@style/Widget.Material3.MaterialTimePicker.Button"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textView_third_year"
            android:drawableLeft="@drawable/cate_folder"
            android:drawableRight="@drawable/arrow_right"
            android:text="Mobile Development"
            android:textColor="#555252"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            />

        <Button
            android:id="@+id/course_web"
            style="@style/Widget.Material3.MaterialTimePicker.Button"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/course_mobile"
            android:drawableLeft="@drawable/cate_folder"
            android:drawableRight="@drawable/arrow_right"
            android:text="Web Programming"
            android:textColor="#555252"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <Button
            android:id="@+id/course_ai"
            style="@style/Widget.Material3.MaterialTimePicker.Button"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/course_web"
            android:drawableLeft="@drawable/cate_folder"
            android:drawableRight="@drawable/arrow_right"
            android:text="Artificial Intelligence"
            android:textColor="#555252"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <Button
            android:id="@+id/course_networks"
            style="@style/Widget.Material3.MaterialTimePicker.Button"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/course_ai"
            android:drawableLeft="@drawable/cate_folder"
            android:drawableRight="@drawable/arrow_right"
            android:text="Computer Networks"
            android:textColor="#555252"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <Button
            android:id="@+id/course_db"
            style="@style/Widget.Material3.MaterialTimePicker.Button"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/course_networks"
            android:drawableLeft="@drawable/cate_folder"
            android:drawableRight="@drawable/arrow_right"
            android:text="Database Management"
            android:textColor="#555252"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

    </RelativeLayout>
</ScrollView>
